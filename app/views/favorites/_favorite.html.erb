<% if user_signed_in? %>
	<% if book.favorited_by?(current_user) %>
		<p><%= link_to book_favorites_path(book.id), method: :delete, remote:true do %><%= content_tag :span, "", class: "glyphicon glyphicon-heart" %>
			<%= book.favorites.count %></p>
			<% end %>
		<% else %>
			<%= link_to book_favorites_path(book.id), method: :post, remote: true do %><%= content_tag :span, "", class: "glyphicon glyphicon-heart-empty" %>
			<%= book.favorites.count %>
		<% end %>
	<% end %>
<% end %>